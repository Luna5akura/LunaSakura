{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Luna",
  "scopeName": "source.luna",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#constants" },
    { "include": "#definitions" },
    { "include": "#function-calls" },
    { "include": "#member-access" },
    { "include": "#types" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.luna",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.luna",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.luna",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "name": "constant.numeric.luna",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.luna",
          "match": "\\b(if|else|while|for|return|break|continue|in)\\b"
        },
        {
          "name": "keyword.other.luna",
          "match": "\\b(print)\\b"
        },
        {
          "name": "storage.type.luna",
          "match": "\\b(var|class)\\b"
        },
        {
          "name": "keyword.operator.logical.luna",
          "match": "\\b(and|or|not)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.luna",
          "match": "\\b(true|false|nil)\\b"
        },
        {
          "name": "variable.language.this.luna",
          "match": "\\b(this|super)\\b"
        }
      ]
    },
    "definitions": {
      "patterns": [
        {
          "comment": "Class definition: class Name < Super :",
          "match": "\\b(class)\\s+([A-Z][a-zA-Z0-9_]*)(?:\\s*(<)\\s*([A-Z][a-zA-Z0-9_]*))?\\s*(:)",
          "captures": {
            "1": { "name": "storage.type.class.luna" },
            "2": { "name": "entity.name.type.class.luna" },
            "3": { "name": "keyword.operator.inheritance.luna" },
            "4": { "name": "entity.name.type.inherited-class.luna" },
            "5": { "name": "punctuation.section.class.begin.luna" }
          }
        },
        {
          "comment": "Method definition (no keyword): name(args) :",
          "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*(\\()",
          "captures": {
            "1": { "name": "entity.name.function.luna" },
            "2": { "name": "punctuation.definition.parameters.begin.luna" }
          }
        }
      ]
    },
    "function-calls": {
      "patterns": [
        {
          "comment": "Built-in functions",
          "name": "support.function.builtin.luna",
          "match": "\\b(len|push|pop|get|set|clear|init)\\b(?=\\()"
        },
        {
          "comment": "Generic function calls",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.luna" }
          }
        }
      ]
    },
    "types": {
      "comment": "Assume capitalized words are Types/Classes",
      "name": "support.class.luna",
      "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
    },
    "member-access": {
      "match": "(\\.)([a-zA-Z_][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "punctuation.accessor.luna" },
        "2": { "name": "variable.other.property.luna" }
      }
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.luna",
          "match": "==|!=|<=|>=|<|>|!|\\+|-|\\*|/|=|\\.|:"
        }
      ]
    },
    "identifiers": {
      "name": "variable.luna",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    }
  }
}