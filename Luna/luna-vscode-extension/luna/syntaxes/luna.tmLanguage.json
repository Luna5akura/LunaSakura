{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Luna",
  "scopeName": "source.luna",
  "patterns": [
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#comments" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.luna",
          "match": "\\b(if|else|while|for|return|class|super|fun|var|nil|true|false|this|print|and|or|in|break|continue)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.luna",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.luna",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "name": "constant.numeric.luna",
      "match": "\\b(-?\\d+(\\.\\d+)?)\\b"
    },
    "comments": {
      "name": "comment.line.number-sign.luna",
      "match": "#.*$"
    },
    "operators": {
      "name": "keyword.operator.luna",
      "match": "[+\\-*/=><!&|.:,\\[\\](){}]"
    },
    "identifiers": {
      "name": "variable.luna",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    }
  }
}