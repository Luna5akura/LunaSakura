# test_alpha.luna

print "Alpha Blending Test...";
var proj = Project(800, 600, 30.0);

# 测试脚本

# 1. 左边放 Ghost 1 (0.5)
var g1 = Video("test.mp4");
setScale(g1, 0.8);
setOpacity(g1, 0.3);
setPos(g1, 0, 100); # 放在左边
add(proj, 0, g1, 0.0);

# 2. 右边放 Ghost 2 (0.2)
var g2 = Video("test.mp4");
setOpacity(g2, 0.8);
setPos(g2, 400, 100); # 放在右边，完全不重叠
add(proj, 1, g2, 0.0);

preview(proj);